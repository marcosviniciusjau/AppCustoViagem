<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCustoViagem.View.EditarPedagio"
             Title="Novo Pedágio"
              BackgroundImageSource="fundo.png">


    <ContentPage.Content>
        <StackLayout>
            <Label Text="Localização:"  TextColor="White"/>
            <Entry x:Name="txt_localizacao"  TextColor="White"  Text="{Binding Localizacao}"/>
            <Label Text="Preço:"  TextColor="White" />
            <Entry x:Name="txt_preco"   TextColor="White" Text="{Binding Valor}"/>

            <Button Text="Salvar" BackgroundColor="white"  Margin="25" CornerRadius="10" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>